{
    "compilerOptions": {
        "allowJs": true,
        "target": "ES6",
        "module": "ES6",
        "lib": ["esnext"],
        "jsx": "react",
        "declaration": true,
        "outDir": "dist",
        /* Redirect output structure to the directory. */
        "rootDir": "src",
    },
    "include": [
        "src/**/*", "app.js"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ],
    "esModuleInterop": true
}